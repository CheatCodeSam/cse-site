---
import AboutUs from "../components/AboutUs.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import MeetUs from "../components/MeetUs.astro";
import ReadyToJoin from "../components/ReadyToJoin.astro";
import WhatAreWeUpTo from "../components/WhatAreWeUpTo.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <div class="">
    <div class="max-w-screen-xl mx-auto">
      <Header />
      <div class="mx-24">
        <Hero />
      </div>
    </div>
    <div class="bg-stone-100">
      <div class="max-w-screen-xl mx-auto">
        <div class="mx-24">
          <AboutUs />
          <MeetUs />
        </div>
      </div>
    </div>
    <div class="max-w-screen-xl mx-auto">
      <div class="mx-24">
        <WhatAreWeUpTo />
      </div>
    </div>
    <div class="bg-stone-100">
      <div class="max-w-screen-xl mx-auto">
        <div class="mx-24">
          <ReadyToJoin />
        </div>
      </div>
    </div>
    <div class="bg-zinc-800">
      <div class="max-w-screen-xl mx-auto">
        <Footer />
      </div>
    </div>
  </div>
</Layout>
