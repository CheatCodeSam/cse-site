---
import Layout from "../layouts/Layout.astro";
import SiteWidth from "../components/SiteWidth.astro";

const data = [{ title: "lorem ipsum", date: "1/12/22", url: "example.com" }];
---

<Layout title="archive">
  <SiteWidth>
    <div class="mx-auto text-center max-w-screen-md">
      <div
        class="text-stone-50 text-2xl md:text-3xl xl:text-4xl font-lato pb-6 font-bold"
      >
        Archive
      </div>
      <div
        class="text-base xl:text-xl pb-8 text-slate-300 font-montserrat font-light"
      >
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus quisquam
        est enim repudiandae. Qui assumenda excepturi, quia quae at alias!
      </div>
    </div>
  </SiteWidth>

  <div class="bg-slate-200">
    <SiteWidth>
      <div class="py-12">
        <table class="table w-full">
          <thead>
            <tr>
              <th>Date</th>
              <th>Title</th>
              <th>Link</th>
            </tr>
          </thead>
          <tbody>
            {
              data.map((d: any) => {
                return (
                  <tr>
                    <td>{d.date}</td>
                    <td>{d.title}</td>
                    <td>
                      <a href={d.url} class="text-slate-900 hover:underline">
                        URL
                      </a>
                    </td>
                  </tr>
                );
              })
            }
          </tbody>
        </table>
      </div>
    </SiteWidth>
  </div>
</Layout>
