---
import Layout from "../layouts/Layout.astro";
import SiteWidth from "../components/SiteWidth.astro";

import { archive } from "../content/archive/archive.json";
---

<Layout title="CSE - Archive">
  <SiteWidth>
    <div class="mx-auto text-center max-w-screen-md">
      <div
        class="text-stone-50 text-2xl md:text-3xl xl:text-4xl font-lato pb-6 font-bold"
      >
        Archive
      </div>
      <div
        class="text-base xl:text-xl pb-8 text-slate-300 font-montserrat font-light"
      >
        A record of all previous materials recorded and retained by the Computer
        Science and Engineering Club can be found on this page.
      </div>
    </div>
  </SiteWidth>

  <div class="bg-slate-200">
    <SiteWidth>
      <div class="py-12">
        <table class="table w-full">
          <thead>
            <tr>
              <th>Date</th>
              <th>Title</th>
              <th>Link</th>
            </tr>
          </thead>
          <tbody>
            {
              archive.reverse().map((d: any) => {
                return (
                  <tr>
                    <td>{d.date}</td>
                    <td>{d.title}</td>
                    <td>
                      {d.url && (
                        <a href={d.url} class="hover:underline">
                          URL
                        </a>
                      )}
                    </td>
                  </tr>
                );
              })
            }
          </tbody>
        </table>
      </div>
    </SiteWidth>
  </div>
</Layout>
