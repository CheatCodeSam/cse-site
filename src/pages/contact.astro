---
import Layout from "../layouts/Layout.astro";
---

<Layout title="contact">
  <div class="md:max-w-screen-xl mx-auto">
    <div class="mx-4 md:mx-8 xl:mx-24">
      <div class="mt-10 mb-14">
        <div class="flex flex-col lg:flex-row">
          <div class="flex flex-col lg:w-1/2 lg:mr-auto">
            <div
              class="text-2xl md:text-3xl xl:text-4xl pb-10 text-stone-50 font-bold leading-tight"
            >
              Contact us
            </div>
            <div
              class="text-slate-300 text-base md:text-lg xl:text-xl font-montserrat pb-8 font-light"
            >
              Lorem ipsum, dolor sit amet consectetur adipisicing elit. Illo
              architecto molestiae odio. Dolor repudiandae, magnam voluptatum et
              veniam cumque molestiae!
            </div>
          </div>
          <div class="text-slate-300 font-montserrat lg:w-5/12">
            <form
              data-netlify="true"
              name="contact"
              method="post"
              data-netlify-recaptcha="true"
            >
              <label class="label">
                <span class="label-text text-slate-300">What is your name?</span
                >
              </label>
              <input
                type="text"
                placeholder="Type here"
                class="input input-bordered w-full max-w-md mb-5 text-cse-navy bg-slate-200"
              />
              <label class="label">
                <span class="label-text text-slate-300"
                  >What is your email?</span
                >
              </label>
              <input
                type="text"
                placeholder="Type here"
                class="input input-bordered max-w-md w-full text-cse-navy mb-5 bg-slate-200"
              />
              <label class="label">
                <span class="label-text text-slate-300"
                  >What can we help you with?</span
                >
              </label>
              <textarea
                class="textarea textarea-bordered h-24 mb-5 max-w-lg text-cse-navy bg-slate-200 w-full"
                placeholder="Type here"></textarea>
              <div data-netlify-recaptcha="true" class="mb-5"></div>
              <input
                class="btn bg-coyote-blue hover:bg-coyote-blue border-none"
                type="submit"
                value="Submit"
              />
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
