---
import Layout from "../layouts/Layout.astro";
import SiteWidth from "../components/SiteWidth.astro";
import H1Text from "../components/H1Text.astro";
---

<Layout title="CSE - Contact">
  <SiteWidth>
    <div class="mt-10 mb-14">
      <div class="flex flex-col lg:flex-row">
        <div class="flex flex-col lg:w-1/2 lg:mr-auto">
          <H1Text light>Contact us</H1Text>
          <div
            class="text-slate-300 text-base md:text-lg xl:text-xl font-montserrat pb-8 font-light"
          >
            Need to get in touch with us? Fill out the form with your inquiry or
            shoot and email to mail@carsonweeks.com.
          </div>
        </div>
        <div class="text-slate-300 font-montserrat lg:w-5/12">
          <form
            data-netlify="true"
            name="contact"
            method="post"
            data-netlify-recaptcha="true"
          >
            <label class="label">
              <span class="label-text text-slate-300">What is your name?</span>
            </label>
            <input
              type="text"
              name="name"
              placeholder="Type here"
              class="input input-bordered w-full max-w-md mb-5 text-cse-navy bg-slate-200"
              required
            />
            <label class="label">
              <span class="label-text text-slate-300">What is your email?</span>
            </label>
            <input
              type="text"
              name="email"
              placeholder="Type here"
              class="input input-bordered max-w-md w-full text-cse-navy mb-5 bg-slate-200"
              required
            />
            <label class="label">
              <span class="label-text text-slate-300"
                >What can we help you with?</span
              >
            </label>
            <textarea
              class="textarea textarea-bordered h-24 mb-5 max-w-lg text-cse-navy bg-slate-200 w-full"
              name="body"
              placeholder="Type here"
              required></textarea>
            <div data-netlify-recaptcha="true" class="mb-5"></div>
            <input class="btn btn-primary" type="submit" value="Submit" />
          </form>
        </div>
      </div>
    </div>
  </SiteWidth>
</Layout>
