---
import { Image } from "@astrojs/image/components";
import logo from "../assets/logo.png";
import DiscordIcon from "./icons/DiscordIcon.astro";

import { Bars3Icon } from "@heroicons/react/24/solid/esm/index.js";
---

<header x-data="{ open: false }" class="bg-cse-navy">
  <div class="flex px-3 xl:px-0">
    <div class="w-1/4 xl:w-auto">
      <Image src={logo} alt="descriptive text" />
    </div>

    <div
      class="ml-auto flex gap-6 text-stone-50 items-center font-montserrat font-light text-sm"
    >
      <div class="hidden xl:flex gap-6">
        <a>About us</a>
        <a>Archive</a>
        <a>Events</a>
        <a>Contact</a>
        <a>Announcements</a>
      </div>

      <div x-on:click="open = !open" class="xl:hidden">
        <Bars3Icon className="h-7 w-7 inline mr-2" />
      </div>

      <button class="btn bg-[#5865F2] hover:bg-[#5865F2] text-stone-50 gap-2">
        <DiscordIcon classes="h-6 w-6 fill-white" />
        <span class="hidden xl:inline">Join us on Discord</span>
      </button>
    </div>
  </div>

  <div
    x-bind:class="{'flex': open, 'hidden': !open}"
    class="xl:hidden flex-col gap-1 px-3 p-4 mb-4 bg-slate-800"
  >
    <div class=""><button class="btn btn-block btn-ghost">block</button></div>
    <div class=""><button class="btn btn-block btn-ghost">block</button></div>
    <div class=""><button class="btn btn-block btn-ghost">block</button></div>
    <div class=""><button class="btn btn-block btn-ghost">block</button></div>
    <div class=""><button class="btn btn-block btn-ghost">block</button></div>
  </div>
</header>
