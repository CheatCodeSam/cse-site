---
import { Image } from "@astrojs/image/components";
import meetus from "../assets/meetus.png";
import blurb from "../content/index/blurb.json";
---

<div class="flex flex-col center text-center pt-8 pb-24">
  <div class="md:px-10 xl:px-16 mb-12">
    <div
      class="text-2xl md:text-3xl xl:text-4xl pb-5 text-slate-800 font-bold leading-tight"
    >
      Meet the <span class="text-coyote-blue">Pack</span>
    </div>
    <div
      class="text-base md:text-lg xl:text-xl text-zinc-600 font-montserrat font-light"
    >
      {blurb.meetThePack}
    </div>
  </div>
  <div class="m-auto">
    <Image class="rounded-md" src={meetus} width={892} alt="descriptive text" />
  </div>
</div>
