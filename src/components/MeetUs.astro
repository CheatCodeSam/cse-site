---
import { Image } from "@astrojs/image/components";
import meetus from "../assets/meetus.png";
---

<div class="bg-stone-100">
  <div class="flex flex-col center text-center pt-8 pb-24 mx-5 xl:mx-0">
    <div class="xl:px-16 mb-12">
      <div
        class="text-2xl xl:text-4xl pb-5 text-slate-800 font-bold leading-tight"
      >
        Meet the <span class="text-coyote-blue">Pack</span>
      </div>
      <div
        class="text-base xl:text-lg text-zinc-600 font-montserrat font-light"
      >
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nibh
        sollicitudin tempor, pellentesque at elementum quis.
      </div>
    </div>
    <div class="m-auto">
      <Image
        class="rounded-md"
        src={meetus}
        width={892}
        alt="descriptive text"
      />
    </div>
  </div>
</div>
