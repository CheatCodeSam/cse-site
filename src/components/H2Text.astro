---
interface Props {
  extraClasses?: string;
  light?: boolean;
}
const { extraClasses, light = false } = Astro.props;
---

<h2
  class={` text-lg md:text-xl xl:text-3xl font-lato mb-4 font-bold leading-tight ${extraClasses} ${
    light ? "base-content" : "text-slate-800"
  }`}
>
  <slot />
</h2>
