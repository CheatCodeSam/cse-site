---
import { format } from "date-fns";

const { title, start, body } = Astro.props;
const formattedDate = format(start, "MMMM dd y | h:mm a");
const month = format(start, "MMM");
const day = format(start, "dd");
---

<div class="bg-slate-200 flex w-full rounded font-montserrat mb-4">
  <div class="flex">
    <div
      class="hidden lg:flex flex-col bg-slate-400 rounded-l font-gillsans justify-center px-12"
    >
      <div class="text-slate-100 text-5xl">{day}</div>
      <div class="text-slate-800 text-lg text-center">{month}</div>
    </div>
    <div class="flex flex-col px-3 py-4 md:px-5 md:py-6 xl:py-7 xl:px-6">
      <div class="font-medium md:text-lg mb-1">{title}</div>
      <div class="font-light mb-3 md:text-lg">{formattedDate}</div>
      <div class="font-light text-sm md:text-base line-clamp-3">
        {body}
      </div>
    </div>
  </div>
</div>
