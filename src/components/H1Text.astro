---
interface Props {
  extraClasses?: string;
  light?: boolean;
}
const { extraClasses, light = false } = Astro.props;
---

<h1
  class={` text-2xl md:text-3xl xl:text-4xl font-cabin mb-6 font-bold block leading-tight ${extraClasses} ${
    light ? "base-content" : "text-slate-800"
  }`}
>
  <slot />
</h1>
